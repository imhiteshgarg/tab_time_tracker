{
  "manifest_version": 3,
  "name": "Tab Time Tracker",
  "version": "1.0",
  "description": "Tracks time spent on the current website",
  "permissions": ["tabs", "storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
